<div class="content">
    <div class="container-fluid">
        <div class="page-title-box">
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <h4 >Form Elements</h4>
                </div>
            </div> 
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Foydalanuvchi o'zining malumotlarini o'zgartirishi mumkin</h4>
                        
                
                        
                        <form method="POST" action="<%=`${user._id}?_method=PUT`%>">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-2 col-form-label">Foydalanuvchining ismi</label>
                                <div class="col-sm-10">
                                    <input class="form-control"  name="name" value="<%= user.name %>">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label for="example-email-input" class="col-sm-2 col-form-label">Foydalanuvchining pochtasi</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="email" value="<%= user.email %>">
                                </div>
                            </div>
                           
                            <div class="form-group row">
                                <label for="example-password-input" class="col-sm-2 col-form-label">Parol</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="password" value="<%= user.password %>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-tel-input" class="col-sm-2 col-form-label">Foydalanuvchining roli</label>
                                <div class="col-sm-10">
                                    <input class="form-control" name="tel" value="<%= user.role %>">
                                </div>
                            </div>
                            <div>
                                <a href="/api/user/all" class="btn btn-dark btn-sm float-right ml-3" style="font-size: 15px; padding: 5px 15px;">Orqaga</a>
                                <button type="submit" class="btn btn-success btn-sm float-right ml-3" style="font-size: 15px; padding: 5px 15px;">Saqlash</a>
                            </div>
                        </form>
                        <form method="POST" action="<%=`${user._id}?_method=DELETE`%>">
                            <button type="submit" class="btn btn-danger btn-sm float-right ml-3" style="font-size: 15px; padding: 5px 15px;">O'chirish</button>                     
                        </form>    
                        <a href="" class="btn btn-warning btn-sm float-right ml-3" style="font-size: 15px; padding: 5px 15px;">Spam</a>
                    </div>
                </div>
            </div> 
        </div> 
    </div>
</div>
